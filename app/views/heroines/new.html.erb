<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <%= e %>
    <% end %>
<% end %>

<%= form_for @heroine do |f| %>
    Name: <%= f.text_field :name %><br>
    Super name: <%= f.text_field :super_name %><br>
    <% f.fields_for :heroine_powers do |power|%>
        Power: <%= power.collection_check_boxes :power_ids, Power.all, :id, :name %>
    <% end %>
    <%= f.submit %>
<% end %>