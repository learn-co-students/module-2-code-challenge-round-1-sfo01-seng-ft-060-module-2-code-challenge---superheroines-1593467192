<h1>Create a Heroine!</h1>
<% if @heroine.errors.any? %>
<%= pluralize(@heroine.errors.count, "Error")%>:
<ul>
    <% @heroine.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
<% end %>
</ul>
<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>
    <%= f.label :power %>
    <%= f.fields_for :heroine_powers do |hp| %>
    <%= hp.collection_select :power_id, Power.all, :id, :name%><br>
    <% end %>
    <%= f.submit %>
<% end %>